
<center>
  <div class="card w-50">
    <div class="card-header bg-primary text-white">
	      <h2>My profile :</h2>
	      <h2><%=current_user.email%></h2>
	      <a href="<%=edit_user_registration_path(current_user.id)%>">
				<span class="btn btn-secondary" style="float:right;">Edit profile</span>
		  </a>
    </div>
    <div class="card-body">
		
			<div class="card">
				<div class="card-header">
					<h2>My cart</h2>
					
	 		 	</div>
	 		 	<br>
	 		 	<% if @cart.items.count > 0 %>
					<%= render "cart" %>
				<% else %>
					<ul class="list-group list-group-flush">
						<li class="list-group-item muted-text">
							Your cart is empty ! <br> <br>
							<a href="<%=root_path%>">browse articles</a>
						</li>
					</ul>
				<%end%>
			  	
			</div>
		
    </div>
  </div>
</center>